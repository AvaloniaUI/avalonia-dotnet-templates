<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AvaloniaAppTemplate.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AvaloniaAppTemplate.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="AvaloniaAppTemplate">
    
    <StackPanel  HorizontalAlignment="Center" VerticalAlignment="Center">
        <TextBlock x:Name="Greeting"
                   FontSize="20" />
        <TextBox x:Name="Name" Margin="0 10 0 10"
                 Watermark="Please, enter name..."
                 UseFloatingWatermark="True"/>
        <TextBlock x:Name="NameValidation" 
                   Foreground="Red"
                   FontSize="12" />
    </StackPanel>
</Window>
